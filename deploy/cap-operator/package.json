{
  "name": "susaas-with-cap-operator",
  "version": "0.0.2",
  "description": "scripts to build Docker images for Sustainable Saas",
  "scripts": {
    "build:all": "npm run build:srv && npm run build:db-com && npm run build:api && npm run build:html5-deployer && npm run build:router && npm run build:broker",
    "build:srv": "cross-var docker build -t $IMAGE_PREFIX/capop-susaas-srv:$IMAGE_TAG --platform=linux/amd64 --no-cache --target=srv ../../code -f ../../code/Dockerfile",
    "build:api": "cross-var docker build -t $IMAGE_PREFIX/capop-susaas-api:$IMAGE_TAG --platform=linux/amd64 --target=api ../../code -f ../../code/Dockerfile",
    "build:db-com": "cross-var docker build -t $IMAGE_PREFIX/capop-susaas-db-com:$IMAGE_TAG --platform=linux/amd64 --target=db-com ../../code -f ../../code/Dockerfile",
    "build:router": "cross-var docker build -t $IMAGE_PREFIX/capop-susaas-router:$IMAGE_TAG --platform=linux/amd64 --no-cache ../../code/router -f ../../code/router/Dockerfile",
    "build:broker": "cross-var docker build -t $IMAGE_PREFIX/capop-susaas-broker:$IMAGE_TAG --platform=linux/amd64 --no-cache ../../code/broker -f ../../code/broker/Dockerfile",
    "build:html5-deployer": "cross-var docker build -t $IMAGE_PREFIX/capop-susaas-html5-deployer:$IMAGE_TAG --platform=linux/amd64 --no-cache ../../code/app -f ../../code/app/Dockerfile",
    "push:all": "npm run push:srv && npm run push:db-com && npm run push:api && npm run push:html5-deployer && npm run push:router && npm run push:broker",
    "push:srv": "cross-var docker push $IMAGE_PREFIX/capop-susaas-srv:$IMAGE_TAG",
    "push:api": "cross-var docker push $IMAGE_PREFIX/capop-susaas-api:$IMAGE_TAG",
    "push:db-com": "cross-var docker push $IMAGE_PREFIX/capop-susaas-db-com:$IMAGE_TAG",
    "push:router": "cross-var docker push $IMAGE_PREFIX/capop-susaas-router:$IMAGE_TAG",
    "push:broker": "cross-var docker push $IMAGE_PREFIX/capop-susaas-broker:$IMAGE_TAG",
    "push:html5-deployer": "cross-var docker push $IMAGE_PREFIX/capop-susaas-html5-deployer:$IMAGE_TAG"
  },
  "keywords": [
    "cap",
    "operator"
  ],
  "license": "Apache License 2.0",
  "devDependencies": {
    "cross-env": "^10.1.0",
    "cross-var": "^1.1.0"
  }
}
